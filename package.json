{
  "name": "website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:host": "astro dev --host",
    "dev:clean": "bun run clean && astro dev",
    "build": "astro build && bun run pagefind --site dist",
    "build:clean": "bun run clean:dist && astro build && bun run pagefind --site dist",
    "build:preview": "bun run build && astro preview",
    "postbuild": "bun run scripts/copy-pagefind-dev.ts",
    "preview": "astro preview",
    "preview:host": "astro preview --host",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .astro,.js,.ts,.jsx,.tsx --fix",
    "lint:check": "eslint . --ext .astro,.js,.ts,.jsx,.tsx",
    "test": "vitest run src/__tests__",
    "test:unit": "vitest run src/__tests__",
    "test:watch": "vitest src/__tests__",
    "test:ui": "vitest --ui src/__tests__",
    "test:coverage": "vitest run --coverage src/__tests__",
    "test:changed": "vitest run --changed src/__tests__",
    "test:related": "vitest run --related src/__tests__",
    "test:e2e": "bun run scripts/kill-dev-servers.ts && bun run build && playwright test",
    "test:e2e:ui": "bun run scripts/kill-dev-servers.ts && playwright test --ui",
    "test:e2e:debug": "bun run scripts/kill-dev-servers.ts && playwright test --debug",
    "test:e2e:update-snapshots": "bun run scripts/kill-dev-servers.ts && bun run build && playwright test --update-snapshots",
    "test:all": "bun run test && bun run test:e2e",
    "test:visual": "bun run scripts/kill-dev-servers.ts && bun run build && playwright test --project=visual-regression",
    "test:visual:update": "bun run scripts/kill-dev-servers.ts && bun run build && playwright test --project=visual-regression --update-snapshots",
    "typecheck": "tsc --noEmit",
    "check": "bun run lint:check && bun run format:check && bun run typecheck && bun run test",
    "ci": "bun run check && bun run test:all",
    "new:book": "tsx scripts/new-book.ts",
    "new:post": "tsx scripts/new-post.ts",
    "new:tutorial": "tsx scripts/new-tutorial.ts",
    "new:language": "tsx scripts/new-language.ts",
    "generate:images": "bun run scripts/generate-image-imports.ts",
    "generate:og": "bash scripts/generate-og-image.sh",
    "clean": "rm -rf dist .astro node_modules/.astro",
    "clean:dist": "rm -rf dist",
    "clean:cache": "rm -rf .astro node_modules/.astro",
    "clean:images": "bun run clean:dist && echo 'âœ… Cleaned dist/ directory. Next build will regenerate all images.'",
    "validate": "tsx scripts/validate-content.ts",
    "validate:languages": "tsx scripts/validate-languages.ts",
    "validate:books": "tsx scripts/validate-content.ts books",
    "validate:posts": "tsx scripts/validate-content.ts posts",
    "validate:tutorials": "tsx scripts/validate-content.ts tutorials",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "4.0.15",
    "@astrojs/sitemap": "3.7.0",
    "astro": "5.16.15",
    "marked": "^17.0.1",
    "mysql2": "^3.16.1",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.30.0",
    "rehype-prism-plus": "^2.0.1",
    "sass": "^1.97.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.24.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^17.1.0",
    "happy-dom": "^20.3.9",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "pagefind": "^1.4.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite-plugin-istanbul": "^7.2.1",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  }
}
