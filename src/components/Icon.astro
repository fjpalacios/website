---
/**
 * Icon Component
 *
 * Displays SVG icons from Lucide Icons library.
 * All icons use a consistent 24x24 viewBox for uniformity.
 *
 * @component
 * @param {string} name - Icon name (e.g., "book", "star", "heart")
 * @param {string} [class] - Optional CSS classes
 * @param {string} [size] - Size variant: xs(12px), sm(16px), md(20px), lg(24px), xl(32px)
 * @param {boolean} [filled] - Whether the icon should be filled (only for star/heart)
 */

interface Props {
  name: string;
  class?: string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  filled?: boolean;
}

const { name, class: className, size = "md", filled = false } = Astro.props;

// Icons that can be filled
const fillableIcons = ["star", "heart"];

// All icons from Lucide Icons (https://lucide.dev)
// Using 24x24 viewBox for consistency
const icons: Record<string, string> = {
