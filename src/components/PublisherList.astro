---
import SectionTitle from "@components/SectionTitle.astro";
import { t } from "@locales";
import type { CollectionEntry } from "astro:content";

interface Props {
  publishers: Array<{
    publisher: CollectionEntry<"publishers">;
    count: number;
  }>;
  title: string;
  lang: string;
  showCount?: boolean;
}

const { publishers, title, lang, showCount = true } = Astro.props;

// Filter publishers with at least one item
const publishersWithContent = publishers.filter(({ count }) => count > 0);

// Get base path for publisher URLs using localized routes
const publisherBasePath = t(lang, "routes.publishers");
---

<main class="types">
  <SectionTitle title={title} />
  <ul class="types__list">
    {
      publishersWithContent.map(({ publisher, count }) => (
        <li class="types__list__item">
          <a href={`/${lang}/${publisherBasePath}/${publisher.data.publisher_slug}`}>{publisher.data.name}</a>
          {showCount && <span class="types__list__item__number">({count})</span>}
        </li>
      ))
    }
  </ul>
</main>
