---
interface Props {
  title: string;
  srOnly?: boolean; // Screen reader only - visually hidden
  headingLevel?: "h2" | "h3" | "h4"; // Allow specifying heading level
}

const { title, srOnly = false, headingLevel = "h2" } = Astro.props;
const HeadingTag = headingLevel;
---

<div class:list={["section-title", { "sr-only": srOnly }]}>
  <HeadingTag>{title}</HeadingTag>
</div>
