---
import SectionTitle from "@components/SectionTitle.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  series: Array<{
    serie: CollectionEntry<"series">;
    count: number;
  }>;
  title: string;
  lang: string;
  showCount?: boolean;
}

const { series, title, lang, showCount = true } = Astro.props;

// Filter series with at least one item
const seriesWithContent = series.filter(({ count }) => count > 0);

// Get base path for series URLs (now plural in both languages)
const seriesBasePath = "series";
---

<main class="types">
  <SectionTitle title={title} />
  <ul class="types__list">
    {
      seriesWithContent.map(({ serie, count }) => (
        <li class="types__list__item">
          <a href={`/${lang}/${seriesBasePath}/${serie.data.series_slug}`}>{serie.data.name}</a>
          {showCount && <span class="types__list__item__number">({count})</span>}
        </li>
      ))
    }
  </ul>
</main>
