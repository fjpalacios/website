---
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  return posts.map((post) => ({
    params: { slug: post.data.post_slug },
    props: { postEntry: post },
  }));
}

const { postEntry } = Astro.props;
const post = postEntry.data;
const { Content } = await render(postEntry);

const formattedDate = post.date.toLocaleDateString(post.language === "es" ? "es-ES" : "en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const formattedUpdateDate = post.update_date
  ? post.update_date.toLocaleDateString(post.language === "es" ? "es-ES" : "en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : null;
---

<!doctype html>
<html lang={post.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={post.excerpt} />
    {post.canonical_url && <link rel="canonical" href={post.canonical_url} />}
    <title>{post.title} - Blog Post</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        line-height: 1.6;
        color: #e2e8f0;
        background: #0f172a;
        padding: 2rem;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
      }

      .back-link {
        display: inline-block;
        color: #f87171;
        text-decoration: none;
        margin-bottom: 2rem;
        font-size: 0.95rem;
      }

      .back-link:hover {
        text-decoration: underline;
      }

      .post-header {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        border-left: 4px solid #f87171;
      }

      .post-title {
        font-size: 2.5rem;
        color: #f87171;
        margin-bottom: 0.5rem;
      }

      .post-meta {
        color: #94a3b8;
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
      }

      .post-category {
        display: inline-block;
        background: #f87171;
        color: #fff;
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1rem;
      }

      .post-dates {
        color: #64748b;
        font-size: 0.9rem;
        margin-bottom: 1rem;
      }

      .update-date {
        color: #94a3b8;
        font-style: italic;
        margin-top: 0.25rem;
      }

      .canonical-notice {
        background: #1e293b;
        border: 1px solid #334155;
        border-radius: 6px;
        padding: 1rem;
        margin-bottom: 1rem;
        color: #94a3b8;
        font-size: 0.9rem;
      }

      .canonical-notice a {
        color: #f87171;
        text-decoration: none;
      }

      .canonical-notice a:hover {
        text-decoration: underline;
      }

      .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
      }

      .tag {
        background: #1e293b;
        color: #cbd5e1;
        padding: 0.35rem 0.85rem;
        border-radius: 6px;
        font-size: 0.85rem;
        border: 1px solid #334155;
      }

      .content-wrapper {
        background: #1e293b;
        border-radius: 12px;
        padding: 2.5rem;
      }

      /* Content styles */
      .content-wrapper :global(h1),
      .content-wrapper :global(h2),
      .content-wrapper :global(h3) {
        color: #f87171;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }

      .content-wrapper :global(h1) {
        font-size: 2rem;
      }

      .content-wrapper :global(h2) {
        font-size: 1.5rem;
      }

      .content-wrapper :global(h3) {
        font-size: 1.25rem;
      }

      .content-wrapper :global(p) {
        margin-bottom: 1.5rem;
        color: #cbd5e1;
        line-height: 1.8;
      }

      .content-wrapper :global(a) {
        color: #f87171;
        text-decoration: underline;
      }

      .content-wrapper :global(a:hover) {
        color: #fca5a5;
      }

      .content-wrapper :global(ul),
      .content-wrapper :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
        color: #cbd5e1;
      }

      .content-wrapper :global(li) {
        margin-bottom: 0.5rem;
      }

      .content-wrapper :global(code) {
        background: #0f172a;
        color: #fbbf24;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: "Courier New", monospace;
        font-size: 0.9em;
      }

      .content-wrapper :global(pre) {
        background: #0f172a;
        border: 1px solid #334155;
        border-radius: 8px;
        padding: 1.5rem;
        overflow-x: auto;
        margin-bottom: 1.5rem;
      }

      .content-wrapper :global(pre code) {
        background: none;
        padding: 0;
        color: #e2e8f0;
      }

      .content-wrapper :global(blockquote) {
        border-left: 4px solid #f87171;
        padding-left: 1.5rem;
        margin-bottom: 1.5rem;
        color: #94a3b8;
        font-style: italic;
      }

      .content-wrapper :global(img) {
        max-width: 100%;
        border-radius: 8px;
        margin: 1.5rem 0;
      }

      .content-wrapper :global(hr) {
        border: none;
        border-top: 1px solid #334155;
        margin: 2rem 0;
      }

      @media (max-width: 768px) {
        body {
          padding: 1rem;
        }

        .post-title {
          font-size: 1.75rem;
        }

        .content-wrapper {
          padding: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/blog" class="back-link">‚Üê Back to blog</a>

      <article>
        <header class="post-header">
          <h1 class="post-title">{post.title}</h1>

          <div class="post-meta">
            <span class="post-category">{post.category}</span>

            <div class="post-dates">
              <div>Published: {formattedDate}</div>
              {formattedUpdateDate && <div class="update-date">Updated: {formattedUpdateDate}</div>}
            </div>

            {
              post.canonical_url && (
                <div class="canonical-notice">
                  üìù This article was originally published at{" "}
                  <a href={post.canonical_url} target="_blank" rel="noopener noreferrer">
                    {new URL(post.canonical_url).hostname}
                  </a>
                </div>
              )
            }

            {
              post.tags.length > 0 && (
                <div class="post-tags">
                  {post.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )
            }
          </div>
        </header>

        <div class="content-wrapper">
          <Content />
        </div>
      </article>
    </div>
  </body>
</html>
