---
import CategoryList from "@components/CategoryList.astro";
import Paginator from "@components/Paginator.astro";
import PostList from "@components/PostList.astro";
import SectionTitle from "@components/SectionTitle.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { buildCategoryUrl } from "@utils/routes";

import contactEn from "@/content/static/contact/en.json";
import { TAXONOMY_CONFIGS, generateTaxonomyDetailPaths, getTaxonomyItemsWithCount } from "@/utils/taxonomyPages";

export async function getStaticPaths() {
  const config = TAXONOMY_CONFIGS.categories;
  const paths = await generateTaxonomyDetailPaths(config, "en", contactEn);

  return paths.map(({ slug, page, props }) => ({
    params: { slug, page },
    props,
  }));
}

const { taxonomyItem: category, content, currentPage, totalPages, lang, contact } = Astro.props;

// Get all categories with counts for sidebar
const config = TAXONOMY_CONFIGS.categories;
const categoriesData = await getTaxonomyItemsWithCount(config, lang);
const categoriesWithCounts = categoriesData
  .filter(({ count }) => count > 0)
  .sort((a, b) => (a.item.data.order || 999) - (b.item.data.order || 999))
  .map(({ item, count }) => ({ category: item, count }));

const pageTitle = `${t(lang, "pages.category")}: ${category.data.name}`;
const basePath = buildCategoryUrl(lang, category.data.category_slug);
---

<Layout lang={lang} title={pageTitle} contact={contact} translationSlug={category.data.i18n}>
  <SectionTitle title={pageTitle} />
  <PostList posts={content} lang={lang} />
  <Paginator currentPage={currentPage} totalPages={totalPages} basePath={basePath} lang={lang} />
  <CategoryList categories={categoriesWithCounts} title={t(lang, "allCategories")} lang={lang} />
</Layout>
