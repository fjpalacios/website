---
import CategoryList from "@components/CategoryList.astro";
import Title from "@components/Title.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { getCollection } from "astro:content";

import contactEs from "@/content/static/contact/es.json";

const lang = "es";

// Get all categories in Spanish
const allCategories = await getCollection("categories");
const spanishCategories = allCategories.filter((category) => category.data.language === lang);

// Get all content to count items per category
const allPosts = await getCollection("posts");
const allTutorials = await getCollection("tutorials");
const allBooks = await getCollection("books");

const spanishPosts = allPosts.filter((post) => post.data.language === lang);
const spanishTutorials = allTutorials.filter((tutorial) => tutorial.data.language === lang);
const spanishBooks = allBooks.filter((book) => book.data.language === lang);

// Check if target language (English) has categories with content
const targetLang = "en";
const targetCategories = allCategories.filter((category) => category.data.language === targetLang);
const targetPosts = allPosts.filter((post) => post.data.language === targetLang);
const targetTutorials = allTutorials.filter((tutorial) => tutorial.data.language === targetLang);
const targetBooks = allBooks.filter((book) => book.data.language === targetLang);

// Check if any target category has content
const hasTargetContent = targetCategories.some((category) => {
  const slug = category.data.category_slug;
  const postCount = targetPosts.filter((post) => post.data.categories?.includes(slug)).length;
  const tutorialCount = targetTutorials.filter((tutorial) => tutorial.data.categories?.includes(slug)).length;
  const bookCount = targetBooks.filter((book) => book.data.categories?.includes(slug)).length;
  return postCount + tutorialCount + bookCount > 0;
});

// Count items per category
const categoriesWithCount = spanishCategories.map((category) => {
  const slug = category.data.category_slug;
  const postCount = spanishPosts.filter((post) => post.data.categories?.includes(slug)).length;
  const tutorialCount = spanishTutorials.filter((tutorial) => tutorial.data.categories?.includes(slug)).length;
  const bookCount = spanishBooks.filter((book) => book.data.categories?.includes(slug)).length;
  const count = postCount + tutorialCount + bookCount;
  return { category, count };
});

// Filter categories with content
const categoriesWithContent = categoriesWithCount.filter(({ count }) => count > 0);

// Sort by name
categoriesWithContent.sort((a, b) => a.category.data.name.localeCompare(b.category.data.name));

const pageTitle = `ðŸ“‚ ${t(lang, "pages.categories")}`;
const pageDescription = t(lang, "allCategories");
---

<Layout
  lang={lang}
  title={pageTitle}
  description={pageDescription}
  contact={contactEs}
  hasTargetContent={hasTargetContent}
>
  <Title title={pageTitle} />

  {
    categoriesWithContent.length > 0 ? (
      <CategoryList categories={categoriesWithContent} title={t(lang, "allCategories")} lang={lang} showCount={true} />
    ) : (
      <div class="empty-state">
        <p>{t(lang, "emptyState.categories")}</p>
      </div>
    )
  }
</Layout>

<style lang="scss">
  @use "@/styles/variables" as *;

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: $cursive-color;
  }
</style>
