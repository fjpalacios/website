---
import Paginator from "@components/Paginator.astro";
import PostList from "@components/PostList.astro";
import PublisherList from "@components/PublisherList.astro";
import SectionTitle from "@components/SectionTitle.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { buildPublisherUrl } from "@utils/routes";

import contactEs from "@/content/static/contact/es.json";
import { TAXONOMY_CONFIGS, generateTaxonomyDetailPaths, getTaxonomyItemsWithCount } from "@/utils/taxonomyPages";

export async function getStaticPaths() {
  const config = TAXONOMY_CONFIGS.publishers;
  const paths = await generateTaxonomyDetailPaths(config, "es", contactEs);

  return paths.map(({ slug, page, props }) => ({
    params: { slug, page },
    props,
  }));
}

const { taxonomyItem: publisher, content, currentPage, totalPages, lang, contact } = Astro.props;

// Get all publishers with counts for sidebar
const config = TAXONOMY_CONFIGS.publishers;
const publishersData = await getTaxonomyItemsWithCount(config, lang);
const publishersWithCounts = publishersData
  .filter(({ count }) => count > 0)
  .sort((a, b) => a.item.data.name.localeCompare(b.item.data.name))
  .map(({ item, count }) => ({ publisher: item, count }));

const pageTitle = `${t(lang, "pages.publisher")}: ${publisher.data.name}`;
const basePath = buildPublisherUrl(lang, publisher.data.publisher_slug);
---

<Layout lang={lang} title={pageTitle} contact={contact}>
  <SectionTitle title={pageTitle} />
  <PostList posts={content} lang={lang} />
  <Paginator currentPage={currentPage} totalPages={totalPages} basePath={basePath} lang={lang} />
  <PublisherList publishers={publishersWithCounts} title={t(lang, "allPublishers")} lang={lang} />
</Layout>
