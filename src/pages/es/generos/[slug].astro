---
import Breadcrumbs, { type BreadcrumbItem } from "@components/Breadcrumbs.astro";
import GenreList from "@components/GenreList.astro";
import Paginator from "@components/Paginator.astro";
import PostList from "@components/PostList.astro";
import Title from "@components/Title.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { buildGenreUrl, buildGenresIndexUrl } from "@utils/routes";

import contactEs from "@/content/static/contact/es.json";
import { generateItemListSchema } from "@/utils/schemas/itemList";
import { TAXONOMY_CONFIGS, generateTaxonomyDetailPaths, getTaxonomyItemsWithCount } from "@/utils/taxonomyPages";

export async function getStaticPaths() {
  const config = TAXONOMY_CONFIGS.genres;
  const paths = await generateTaxonomyDetailPaths(config, "es", contactEs);

  return paths.map(({ slug, page, props }) => ({
    params: { slug, page },
    props,
  }));
}

const { taxonomyItem: genre, content, currentPage, totalPages, lang, contact } = Astro.props;

// Get all genres with counts for sidebar
const config = TAXONOMY_CONFIGS.genres;
const genresData = await getTaxonomyItemsWithCount(config, lang);
const genresWithCounts = genresData
  .filter(({ count }) => count > 0)
  .sort((a, b) => a.item.data.name.localeCompare(b.item.data.name))
  .map(({ item, count }) => ({ genre: item, count }));

const pageTitle = `${t(lang, "pages.genre")}: ${genre.data.name}`;
const basePath = buildGenreUrl(lang, genre.data.genre_slug);

// SEO description
const description = `${content.length} ${content.length === 1 ? "libro" : "libros"} del gÃ©nero ${genre.data.name}`;

// Build breadcrumbs
const breadcrumbs: BreadcrumbItem[] = [
  { label: t(lang, "pages.home"), url: `/${lang}` },
  { label: t(lang, "pages.genres"), url: buildGenresIndexUrl(lang) },
  { label: genre.data.name }, // Current page, no URL
];

// Generate ItemList schema for SEO
const itemListSchema = generateItemListSchema(
  content.map((item) => {
    const schemaType = item.type === "book" ? "Book" : item.type === "tutorial" ? "TechArticle" : "BlogPosting";
    const routeKey = item.type === "book" ? "books" : item.type === "tutorial" ? "tutorials" : "posts";
    return {
      name: item.title,
      url: `/${lang}/${t(lang, `routes.${routeKey}`)}/${item.slug}/`,
      type: schemaType,
      description: item.excerpt,
    };
  }),
  Astro.site ? Astro.site.toString() : "https://fjp.es",
);
---

<Layout lang={lang} title={pageTitle} description={description} contact={contact} translationSlug={genre.data.i18n}>
  <script slot="schema" type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />

  <Breadcrumbs items={breadcrumbs} lang={lang} />
  <Title title={pageTitle} srOnly={false} useAsPagefindTitle={true} />
  <div data-pagefind-ignore>
    <PostList posts={content} lang={lang} />
  </div>
  <Paginator currentPage={currentPage} totalPages={totalPages} basePath={basePath} lang={lang} />
  <GenreList genres={genresWithCounts} title={t(lang, "allGenres")} lang={lang} />
</Layout>
