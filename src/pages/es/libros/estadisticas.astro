---
import BookStatsContainer from "@/components/blog/BookStatsContainer.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Layout from "@/layouts/Layout.astro";
import { t } from "@/locales";
import { getContact } from "@/utils/content/contact";
import { buildIndexUrl } from "@/utils/routes";

const lang = "es";
const contact = getContact(lang);

// Breadcrumbs
const breadcrumbs = [
  {
    label: t(lang, "pages.home"),
    url: `/${lang}/`,
  },
  {
    label: t(lang, "pages.books"),
    url: buildIndexUrl("books", lang),
  },
  {
    label: t(lang, "bookStats.title"),
  },
];

// SEO
const title = t(lang, "bookStats.title");
const description = t(lang, "bookStats.description");
---

<Layout {lang} {contact} {title} {description}>
  <main class="book-stats-page">
    <Breadcrumbs items={breadcrumbs} {lang} />
    <h1 class="sr-only">{title}</h1>
    <BookStatsContainer {lang} />
  </main>
</Layout>

<style lang="scss">
  @use "@/styles/variables" as *;

  .book-stats-page {
    grid-column: span 12;
  }
</style>
