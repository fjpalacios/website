---
import ChallengeList from "@components/ChallengeList.astro";
import Paginator from "@components/Paginator.astro";
import PostList from "@components/PostList.astro";
import SectionTitle from "@components/SectionTitle.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { getCollection } from "astro:content";

import contactEs from "@/content/static/contact/es.json";
import { prepareBookSummary } from "@/utils/blog";

export async function getStaticPaths() {
  const BOOKS_PER_PAGE = 10;

  // Get all challenges in Spanish
  const allChallenges = await getCollection("challenges");
  const spanishChallenges = allChallenges.filter((challenge) => challenge.data.language === "es");

  // Get all books in Spanish
  const allBooks = await getCollection("books");
  const spanishBooks = allBooks.filter((book) => book.data.language === "es");

  // Generate paths for each challenge
  const paths = [];

  for (const challenge of spanishChallenges) {
    const challengeSlug = challenge.data.challenge_slug;

    // Filter books by challenge
    const challengeBooks = spanishBooks.filter((book) => {
      return book.data.challenges?.includes(challengeSlug);
    });

    // Sort by date descending
    challengeBooks.sort((a, b) => {
      const dateA = new Date(a.data.read_start_date || 0);
      const dateB = new Date(b.data.read_start_date || 0);
      return dateB.getTime() - dateA.getTime();
    });

    // Calculate total pages
    const totalPages = Math.ceil(challengeBooks.length / BOOKS_PER_PAGE);

    // Generate path for each page
    for (let page = 1; page <= Math.max(1, totalPages); page++) {
      const startIndex = (page - 1) * BOOKS_PER_PAGE;
      const paginatedBooks = challengeBooks.slice(startIndex, startIndex + BOOKS_PER_PAGE);

      // Transform to summary format
      const transformedBooks = paginatedBooks.map((book) => prepareBookSummary(book));

      paths.push({
        params: {
          slug: challengeSlug,
          page: page === 1 ? undefined : page.toString(),
        },
        props: {
          challenge,
          books: transformedBooks,
          currentPage: page,
          totalPages: Math.max(1, totalPages),
          allChallenges: spanishChallenges,
        },
      });
    }
  }

  return paths;
}

const { challenge, books, currentPage, totalPages, allChallenges } = Astro.props;
const lang = "es";
const contact = contactEs;

// Get challenge counts for the challenge list
const challengesWithCounts = await Promise.all(
  allChallenges.map(async (c) => {
    const allBooks = await getCollection("books");
    const spanishBooks = allBooks.filter((b) => b.data.language === "es");
    const count = spanishBooks.filter((book) => book.data.challenges?.includes(c.data.challenge_slug)).length;
    return { challenge: c, count };
  }),
);

// Sort by name
challengesWithCounts.sort((a, b) => a.challenge.data.name.localeCompare(b.challenge.data.name));

const pageTitle = `${t(lang, "pages.challenge")}: ${challenge.data.name}`;
const basePath = `/es/retos/${challenge.data.challenge_slug}`;
---

<Layout lang={lang} title={pageTitle} contact={contact} translationSlug={challenge.data.i18n}>
  <SectionTitle title={pageTitle} />
  <PostList posts={books} lang={lang} />
  <Paginator currentPage={currentPage} totalPages={totalPages} basePath={basePath} lang={lang} />
  <ChallengeList challenges={challengesWithCounts} title={t(lang, "allChallenges")} lang={lang} />
</Layout>
