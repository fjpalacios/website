---
import Breadcrumbs, { type BreadcrumbItem } from "@components/Breadcrumbs.astro";
import ChallengeList from "@components/ChallengeList.astro";
import Paginator from "@components/Paginator.astro";
import PostList from "@components/PostList.astro";
import Title from "@components/Title.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { buildChallengeUrl, buildChallengesIndexUrl } from "@utils/routes";

import contactEs from "@/content/static/contact/es.json";
import { TAXONOMY_CONFIGS, generateTaxonomyDetailPaths, getTaxonomyItemsWithCount } from "@/utils/taxonomyPages";

export async function getStaticPaths() {
  const config = TAXONOMY_CONFIGS.challenges;
  const paths = await generateTaxonomyDetailPaths(config, "es", contactEs);

  return paths.map(({ slug, page, props }) => ({
    params: { slug, page },
    props,
  }));
}

const { taxonomyItem: challenge, content, currentPage, totalPages, lang, contact } = Astro.props;

// Get all challenges with counts for sidebar
const config = TAXONOMY_CONFIGS.challenges;
const challengesData = await getTaxonomyItemsWithCount(config, lang);
const challengesWithCounts = challengesData
  .filter(({ count }) => count > 0)
  .sort((a, b) => a.item.data.name.localeCompare(b.item.data.name))
  .map(({ item, count }) => ({ challenge: item, count }));

const pageTitle = `${t(lang, "pages.challenge")}: ${challenge.data.name}`;
const basePath = buildChallengeUrl(lang, challenge.data.challenge_slug);

// Build breadcrumbs
const breadcrumbs: BreadcrumbItem[] = [
  { label: t(lang, "pages.home"), url: `/${lang}` },
  { label: t(lang, "pages.challenges"), url: buildChallengesIndexUrl(lang) },
  { label: challenge.data.name }, // Current page, no URL
];
---

<Layout lang={lang} title={pageTitle} contact={contact} translationSlug={challenge.data.i18n}>
  <Breadcrumbs items={breadcrumbs} lang={lang} />
  <Title title={pageTitle} srOnly={true} />
  <PostList posts={content} lang={lang} />
  <Paginator currentPage={currentPage} totalPages={totalPages} basePath={basePath} lang={lang} />
  <ChallengeList challenges={challengesWithCounts} title={t(lang, "allChallenges")} lang={lang} />
</Layout>
