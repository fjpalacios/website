---
import ChallengeList from "@components/ChallengeList.astro";
import Title from "@components/Title.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { getCollection } from "astro:content";

import contactEs from "@/content/static/contact/es.json";

const lang = "es";

// Get all challenges in Spanish
const allChallenges = await getCollection("challenges");
const spanishChallenges = allChallenges.filter((challenge) => challenge.data.language === lang);

// Get all books in Spanish to count items per challenge
const allBooks = await getCollection("books");
const spanishBooks = allBooks.filter((book) => book.data.language === lang);

// Check if target language (English) has challenges with books
const targetLang = "en";
const targetChallenges = allChallenges.filter((challenge) => challenge.data.language === targetLang);
const targetBooks = allBooks.filter((book) => book.data.language === targetLang);

const hasTargetContent = targetChallenges.some((challenge) => {
  const count = targetBooks.filter((book) => book.data.challenges?.includes(challenge.data.challenge_slug)).length;
  return count > 0;
});

// Count books per challenge
const challengesWithCount = spanishChallenges.map((challenge) => {
  const count = spanishBooks.filter((book) => book.data.challenges?.includes(challenge.data.challenge_slug)).length;
  return { challenge, count };
});

// Filter challenges with content
const challengesWithContent = challengesWithCount.filter(({ count }) => count > 0);

// Sort by name
challengesWithContent.sort((a, b) => a.challenge.data.name.localeCompare(b.challenge.data.name));

const pageTitle = `ðŸŽ¯ ${t(lang, "pages.challenges")}`;
const pageDescription = t(lang, "allChallenges");
---

<Layout
  lang={lang}
  title={pageTitle}
  description={pageDescription}
  contact={contactEs}
  hasTargetContent={hasTargetContent}
>
  <Title title={pageTitle} />

  {
    challengesWithContent.length > 0 ? (
      <ChallengeList challenges={challengesWithContent} title={t(lang, "allChallenges")} lang={lang} showCount={true} />
    ) : (
      <div class="empty-state">
        <p>{t(lang, "emptyState.challenges")}</p>
      </div>
    )
  }
</Layout>

<style lang="scss">
  @use "@/styles/variables" as *;

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: $cursive-color;
  }
</style>
