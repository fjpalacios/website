---
import SeriesList from "@components/SeriesList.astro";
import Title from "@components/Title.astro";
import Layout from "@layouts/Layout.astro";
import { t } from "@locales";
import { getCollection } from "astro:content";

import contactEs from "@/content/static/contact/es.json";

const lang = "es";

// Get all series in Spanish
const allSeries = await getCollection("series");
const spanishSeries = allSeries.filter((serie) => serie.data.language === lang);

// Get all books in Spanish to count items per serie
const allBooks = await getCollection("books");
const spanishBooks = allBooks.filter((book) => book.data.language === lang);

// Check if target language (English) has series with books
const targetLang = "en";
const targetSeries = allSeries.filter((serie) => serie.data.language === targetLang);
const targetBooks = allBooks.filter((book) => book.data.language === targetLang);

const hasTargetContent = targetSeries.some((serie) => {
  const count = targetBooks.filter((book) => book.data.serie === serie.data.serie_slug).length;
  return count > 0;
});

// Count books per serie
const seriesWithCount = spanishSeries.map((serie) => {
  const count = spanishBooks.filter((book) => book.data.serie === serie.data.serie_slug).length;
  return { serie, count };
});

// Filter series with content
const seriesWithContent = seriesWithCount.filter(({ count }) => count > 0);

// Sort by name
seriesWithContent.sort((a, b) => a.serie.data.name.localeCompare(b.serie.data.name));

const pageTitle = `ðŸ“š ${t(lang, "pages.series")}`;
const pageDescription = t(lang, "allSeries");
---

<Layout
  lang={lang}
  title={pageTitle}
  description={pageDescription}
  contact={contactEs}
  hasTargetContent={hasTargetContent}
>
  <Title title={pageTitle} />

  {
    seriesWithContent.length > 0 ? (
      <SeriesList series={seriesWithContent} title={t(lang, "allSeries")} lang={lang} showCount={true} />
    ) : (
      <div class="empty-state">
        <p>{t(lang, "emptyState.series")}</p>
      </div>
    )
  }
</Layout>

<style lang="scss">
  @use "@/styles/variables" as *;

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: $cursive-color;
  }
</style>
